{
  "manifest_version": 3,
  "name": "Gestures Plugin",
  "version": "1.0",
  "description": "Plugin de gestos para teres uma experiência mais fácil e eficiente.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "https://tfhub.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "libs/*",
        "pages/*",
        "styles/*",
        "images/*",
        "gestures/*",
        "scripts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/tf-core.min.js",
        "libs/tf-converter.min.js",
        "libs/tf-backend-webgl.min.js",
        "libs/hand-pose-detection.js",
        "libs/fingerpose.js",
        "gestures/openHand.js",
        "gestures/thumbDown.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "images/logotipo-rounded.png"
  }
}
